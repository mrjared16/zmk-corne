// Mouse speed settings - must be defined BEFORE includes
// Tuned to match Kanata config: scroll perfect at 80, pointer at half speed
#define ZMK_POINTING_DEFAULT_MOVE_VAL 600   // Mouse movement (reduced from 1200)
#define ZMK_POINTING_DEFAULT_SCRL_VAL 80    // Fast scrolling (perfect, keep as is)

#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/* Key position groups for Corne 42-key - urob's "timeless" homerow mods */

#define KEYS_L 0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29  // Left hand
#define KEYS_R 6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35  // Right hand
#define THUMBS 36 37 38 39 40 41  // Thumb cluster

/ {
    behaviors {
        /*
         * urob's "timeless" homerow mods
         *
         * Key features:
         * - balanced flavor: Activates hold when another key is pressed+released within tapping-term
         * - require-prior-idle-ms: Immediately taps if typing quickly (eliminates delay)
         * - hold-trigger-key-positions: Only triggers with opposite hand (prevents same-hand rolls)
         * - hold-trigger-on-release: Allows same-hand modifier combos (Ctrl+Shift, etc.)
         * - Large tapping-term (280ms): Reduces timing sensitivity
         */

        hml: homerow_mods_left {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            bindings = <&kp>, <&kp>;

            hold-trigger-key-positions = <KEYS_R THUMBS>;
            hold-trigger-on-release;
        };

        hmr: homerow_mods_right {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "balanced";
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            bindings = <&kp>, <&kp>;

            hold-trigger-key-positions = <KEYS_L THUMBS>;
            hold-trigger-on-release;
        };

        /*
         * Custom mouse behaviors with acceleration
         * Tuned for balanced response: slower movement, fast scroll
         * - Moderate acceleration for precise control
         * - Exponential curve for smooth ramping
         */
        mmv_accel: mouse_move_accel {
            compatible = "zmk,behavior-input-two-axis";
            #binding-cells = <1>;
            x-input-code = <INPUT_REL_X>;
            y-input-code = <INPUT_REL_Y>;
            time-to-max-speed-ms = <600>;  // Slower acceleration for control (was 300)
            acceleration-exponent = <1>;   // Exponential curve
        };

        msc_accel: mouse_scroll_accel {
            compatible = "zmk,behavior-input-two-axis";
            #binding-cells = <1>;
            x-input-code = <INPUT_REL_HWHEEL>;
            y-input-code = <INPUT_REL_WHEEL>;
            time-to-max-speed-ms = <40>;   // Very fast for scrolling (was 300)
            acceleration-exponent = <0>;   // Linear for predictable scrolling
            delay-ms = <0>;
        };

        /*
         * LLM macro hold-tap
         * Tap = custom_script_2 (types "2:" - more frequent)
         * Hold = custom_script_1 (types "1:")
         */
        llm_ht: llm_hold_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            bindings = <&custom_script_1>, <&custom_script_2>;
        };

        /*
         * Shift + Toggle Layer hold-tap
         * Hold = Right Shift
         * Tap = Toggle Layer 1 (Nav)
         */
        shift_tog: shift_toggle {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <200>;
            bindings = <&kp>, <&tog>;
        };

        /*
         * Tab tap-dance with mouse layer
         * Single-tap = Tab
         * Double-tap = Toggle Layer 4 (Mouse)
         * Hold = Layer 4 (momentary)
         */
        td_tab: tap_dance_tab {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&lt 4 TAB>, <&tog 4>;
        };
    };

    combos {
        compatible = "zmk,combos";

        bluetooth_fn {
            bindings = <&sl 3>;
            key-positions = <0 11>;
        };

        gaming_toggle {
            bindings = <&tog 5>;
            key-positions = <24 35>;
        };
    };

    macros {
        tmux_copy: tmux_copy {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(A)>, <&macro_wait_time 50>, <&kp LBKT>;

            label = "TMUX_COPY";
        };

        custom_script_1: custom_script_1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press &kp LG(LS(O))>,
                <&macro_wait_time 100>,
                <&macro_release &kp LG(LS(O))>,
                <&macro_wait_time 650>,
                <&kp N1>,
                <&macro_wait_time 50>,
                <&kp COLON>,
                <&macro_wait_time 50>,
                <&kp LC(LS(V))>;

            label = "CUSTOM_SCRIPT_1";
        };

        custom_script_2: custom_script_2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press &kp LG(LS(O))>,
                <&macro_wait_time 100>,
                <&macro_release &kp LG(LS(O))>,
                <&macro_wait_time 650>,
                <&kp N2>,
                <&macro_wait_time 50>,
                <&kp COLON>,
                <&macro_wait_time 50>,
                <&kp LC(LS(V))>;

            label = "CUSTOM_SCRIPT_2";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Default Layer";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  | GUI/S | CTRL/D | ALT/F |  G  |   |  H  | ALT/J | CTRL/K | GUI/L |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
            //
            // Note: Using urob's "timeless" homerow mods (hml/hmr) instead of basic mod-tap (mt)

            bindings = <
&td_tab           &kp Q  &kp W            &kp E            &kp R            &kp T          &kp Y            &kp U             &kp I            &kp O             &kp P                 &kp MINUS
&mt RCTRL ESCAPE  &hml LEFT_SHIFT A  &hml LEFT_GUI S  &hml LCTRL D     &hml LEFT_ALT F  &kp G          &kp H            &hmr RIGHT_ALT J  &hmr RCTRL K     &hmr RIGHT_GUI L  &hmr RSHIFT SEMICOLON  &kp SQT
&kp LSHFT         &kp Z  &kp X            &kp C            &kp V            &kp B          &kp N            &kp M             &kp COMMA        &kp DOT           &kp FSLH              &shift_tog RSHIFT 1
                                          &lt 4 LC(SPACE)  &lt 2 LC(A)      &lt 1 SPACE    &lt 1 BACKSPACE  &lt 2 ENTER       &llm_ht 0 0
            >;
        };

        lower_layer {
            display-name = "Nav";

            // -----------------------------------------------------------------------------------------
            // Optimized Nav Layer - Vim-centric design
            // Row 1: Numbers 1-5 | 6-0, HOME
            // Row 2: 0, $, C-D, C-U, tmux | Arrows, END (below HOME)
            // Row 3: ^, B, W, 0 (dup), C-W | C-N, C-P, {, }
            //
            // Key improvements:
            // - C-D and C-U adjacent (pos 15-16) for ergonomic scrolling
            // - C-N and C-P together (pos 30-31) for completion/nav
            // - Duplicate 0 (pos 13, 28) for symmetry and 0w optimization
            // - B before W (pos 26-27) for mental model
            // - END below HOME for vertical alignment

            bindings = <
&trans  &kp N1     &kp N2      &kp N3      &kp N4      &kp N5        &kp N6     &kp N7      &kp N8           &kp N9             &kp N0   &kp HOME
&trans  &kp N0     &kp DOLLAR  &kp LC(D)   &kp LC(U)   &tmux_copy    &kp LEFT   &kp DOWN    &kp UP           &kp RIGHT          &trans   &kp END
&trans  &kp CARET  &kp B       &kp W       &kp N0      &kp LC(W)     &kp LC(N)  &kp LC(P)   &kp LEFT_BRACE   &kp RIGHT_BRACE    &trans   &trans
                               &trans      &trans      &trans        &trans     &trans      &trans
            >;
        };

        raise_layer {
            display-name = "Raise Layer";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &kp EXCL        &kp AT           &kp HASH              &kp DLLR               &kp PRCNT    &kp CARET      &kp AMPS           &kp ASTRK         &kp TILDE      &kp GRAVE         &trans
&trans  &kp LEFT_BRACE  &kp RIGHT_BRACE  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp EQUAL    &kp SEMICOLON  &kp DOUBLE_QUOTES  &kp SINGLE_QUOTE  &kp LESS_THAN  &kp GREATER_THAN  &trans
&trans  &kp BACKSLASH   &kp PIPE         &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp PLUS     &kp COLON      &kp MINUS          &kp UNDERSCORE    &kp SLASH      &kp QUESTION      &trans
                                         &trans                &trans                 &trans       &kp DELETE     &trans             &trans
            >;
        };

        layer_3 {
            bindings = <
&to 0       &kp F1        &kp F2        &kp F3        &kp F4        &kp F5          &kp F6   &kp F7  &kp F8       &kp F9  &kp F10  &kp F12
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4    &kp F11  &trans  &bootloader  &trans  &trans   &trans
&trans      &trans        &trans        &trans        &trans        &trans          &trans   &trans  &trans       &trans  &trans   &trans
                                        &trans        &trans        &trans          &trans   &trans  &trans
            >;
        };

        layer_4 {
            bindings = <
&trans  &trans  &trans  &trans          &trans         &trans    &trans          &msc SCRL_UP    &mmv MOVE_UP    &trans           &trans  &trans
&trans  &trans  &trans  &msc SCRL_DOWN  &msc SCRL_UP   &trans    &msc SCRL_DOWN  &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &trans  &trans
&trans  &trans  &trans  &trans          &trans         &trans    &mkp LCLK       &mkp RCLK       &trans          &trans           &trans  &trans
                        &trans          &trans         &mkp LCLK &mkp RCLK       &trans          &trans
            >;
        };

        layer_5 {
            bindings = <
&kp TAB    &kp Q  &kp W  &kp E   &kp R    &kp T        &kp Y     &kp U      &kp I      &kp O    &kp P     &kp BSPC
&kp LCTRL  &kp A  &kp S  &kp D   &kp F    &kp G        &kp H     &kp J      &kp K      &kp L    &kp SEMI  &kp ENTER
&kp LSHFT  &kp Z  &kp X  &kp C   &kp V    &kp B        &kp N     &kp M      &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                         &trans  &kp ESC  &kp SPACE    &kp BSPC  &kp ENTER  &trans
            >;
        };
    };
};
